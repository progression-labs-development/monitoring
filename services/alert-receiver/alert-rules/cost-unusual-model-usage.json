{
  "_comment": "Alert when Opus model usage exceeds 80% of daily requests (#31)",
  "alert": "cost_unusual_model_usage",
  "alertType": "METRIC_BASED_ALERT",
  "ruleType": "threshold_rule",
  "condition": {
    "compositeQuery": {
      "builderQueries": {
        "A": {
          "aggregateOperator": "count",
          "dataSource": "traces",
          "queryName": "A",
          "aggregateAttribute": {
            "key": "traceID",
            "type": "string"
          },
          "filters": {
            "items": [
              {
                "key": { "key": "gen_ai.request.model", "type": "tag" },
                "op": "contains",
                "value": "opus"
              }
            ],
            "op": "AND"
          },
          "groupBy": []
        }
      },
      "queryType": "builder"
    },
    "op": "1",
    "target": 0.8,
    "matchType": "1"
  },
  "labels": {
    "domain": "cost",
    "severity": "warning"
  },
  "annotations": {
    "description": "Opus model usage exceeds 80% of daily requests",
    "summary": "Unusually high Opus model usage"
  },
  "evalWindow": "24h0m0s",
  "frequency": "6h0m0s"
}
